



<h1><%= current_user.fname %>'s Books</h1>
<%= link_to "Add Book", new_book_path, { :class => "button waves-effect waves-light btn" } %>
<br><br>

<%= link_to "main" , books_path %>


<table class="striped bordered">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Publisher</th>
    <th>Edition</th>
    <th>Status</th>
    <th>Picture</th>
    <th>Price</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.auther %></td>
      <td><%= book.publisher %></td>
      <td><%= book.edition %></td>
      <td><%= book.status %></td>
      <td><%= image_tag(book.pic, size: "100x100", alt: "Book Image") %></td>
      <td><%= book.price %></td>
      <td><a class="btn-floating btn-large red" href="<%= edit_book_path(book) %>" >
           <em class="large material-icons">Edit Book</em>
          </a>
      </td>
     
      <td> 
           <%= button_to "Delete", book_path(book.id), method: :delete,
              data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
<% end %>
</table>


  