<h1 class = "display-3 text-center"><%= current_user.fname %>'s Books</h1>

<br><br>


<table class="table table-hover  striped bordered">
  <tr class = 'label-info'>
    <th>Title</th>
    <th>Author</th>
    <th>Publisher</th>
    <th>Edition</th>
    <th>Status</th>
    <th>Picture</th>
    <th>Price</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.auther %></td>
      <td><%= book.publisher %></td>
      <td><%= book.edition %></td>
      <td><%= book.status %></td>
      <td><%= image_tag(book.pic, size: "100x100", alt: "Book Image") %></td>
      <td><%= book.price %></td>
      
      <td><a class="glyphicon glyphicon-edit" href="<%= edit_book_path(book) %>" >
      </a>
      </td>
    
      <td><a class="glyphicon glyphicon-trash" data-confirm="Are you sure you want to delete <%= book.title %>?" data-method="delete" href="/books/<%= book.id %>" rel="nofollow">
    	   </a>
        </td>
    </tr>
<% end %>
</table>

</div>


  