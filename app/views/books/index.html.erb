<h1 class = "display-3 text-center">Welcome To our BookStore...</h1>

<table class="table table-hover striped bordered">
  <tr class = 'label-info'>
    <th>Title</th>
    <th>Author</th>
    <th>Publisher</th>
    <th>Edition</th>
    <th>Status</th>
    <th>Picture</th>
    <th>Price</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.auther %></td>
      <td><%= book.publisher %></td>
      <td><%= book.edition %></td>
      <td><%= book.status %></td>
      <td><%= image_tag(book.pic, size: "100x100", alt: "Book Image") %></td>
      <td><%= book.price %></td>
    </tr>
<% end %>
</table>

</div>
