<div class = "container">

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>


<nav class="navbar navbar-light" style="background-color: #e3f2fd;">
<% if user_signed_in? %>
<a class="navbar-brand" href="#">Logged in as <strong><%= current_user.email %></strong></a>



    <ul class="navbar-nav mr-auto">
    <div class="row m-auto">
    <li class="nav-item">
    <%= link_to "Edit profile", edit_user_registration_path, class:'nav-item '  %>
    </li>
    <li class="nav-item ">
    <%= link_to "Logout", destroy_user_session_path, method: :delete, class:'nav-item'  %>
    </li>
    </div>
    
    <%else%>
 
    <div class="row m-auto">
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class:'nav-item mr-2'  %>
      </li>
      <li class="nav-item">
        <%= link_to "Sign up", new_user_registration_path, class:'nav-item'  %>
      </li>
      </div>
</ul>
    <%end%>
    
</nav>

</div>