


<%= form_for Review.new do |f| %>
    <%=f.hidden_field :book_id , :value => @books.id %>
    <div class="form-group col-md-6">
    <%= f.label :recommend, 'Book review :' %>
    <%= f.text_area :recommend, class:"form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :rate, 'Book rate :'%>
      <%= f.select :rate, [1,2,3,4,5] , class:"form-control"%>
    </div>

<%= f.submit "Submit", class:" form-group col-md-2 btn waves-effect waves-light btn-primary" %>
<br><br><br><br><br><br>

  <% end %>