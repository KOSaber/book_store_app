
<div style="width:100%,hight:20px;">

<%= form_for Review.new do |f| %>
    <%=f.hidden_field :book_id , :value => @books.id %>
    <div class="form-group col-md-6">
    <%= f.label :recommend, 'Book review :' %>
    <%= f.text_area :recommend, class:"form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :rate, 'Book rate :'%>
      </div>
      <div class="form-group col-md-2">
      <%= f.select :rate, [1,2,3,4,5] , class:"form-control form-control-lg"%>
      <%= f.submit "Submit", class:"invisible" %>
    </div>

    <div class="form-group col-md-2">
      <%= f.submit "Submit", class:"btn waves-effect waves-light form-control",style:"background-color:#70bde3;" %>
    </div>
    <br><br><br><br>

  <% end %>

  </div>