<div class = "container">
<div>
<img src="https://66.media.tumblr.com/077729f63cbb21c8f4cc5c5255336a98/tumblr_pdfdcpUdqU1xcbgkdo3_500.jpg" alt="book" height="100" width="100%" >
</div>

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="form-group">
  <%= f.label :fname, 'First Name :' %><br />
  <%= f.text_field :fname, autofocus: true, autocomplete: "First Name :" %>
</div>
<div class="form-group">
<%= f.label :lname, 'Last Name :' %><br />
<%= f.text_field :lname, autofocus: true, autocomplete: "Last Name :" %>
</div>
<div class="form-group">
<%= f.label :phone, 'Phone Number :' %><br />
<%= f.text_field :phone, autofocus: true, autocomplete: "Phone Number :" %>
</div>

  <div class="form-group">
    <%= f.label :email, 'E-mail' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "Email" %>
  </div>

  <div class="form-group">
    <%= f.label :password, 'Password :' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%=  f.label :password_confirmation, 'Password confirmation :' %><br />
    <%=  f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions form-group">
    <%= f.submit "Sign up" ,class:"btn btn-primary"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>